<%= form_for @post do |f| %>

  <%= f.text_field :title %>
  <br>
  <%= f.text_area :body %>
  <br>

  <%= f.collection_check_boxes( :tag_ids, 
                              Tag.all,
                              :id,
                              :name ) %>

  <br>

   <%= f.collection_radio_buttons( :category_id, Category.all, :id, :name ) %> 



  <br>

  <%= f.fields_for :comments do |comment_fields| %>
    <%= comment_fields.label :body, "Add comment" %><br>
    <%= comment_fields.text_area :body %>
  <% end %>

  <br>

  <%= f.submit "#{new_or_edit}" %>

<% end %>



