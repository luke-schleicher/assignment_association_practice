<h1>Create a New Post</h1>

<%= form_for @post do |f| %>

  <%= f.text_field :title %>
  <%= f.text_area :body %>

  <%= f.collection_check_boxes( :tag_ids, 
                              Tag.all,
                              :id,
                              :name) %>

  <%= f.submit "Create Post" %>

<% end %>
